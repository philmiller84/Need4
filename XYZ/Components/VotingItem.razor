


<div class="row mb-3">
    <div class="col-lg-4 themed-grid-col">Case: @Decision.Description</div>
    @*<div class="col-lg-4 themed-grid-col">Action: @Decision.Action</div>*@
    <div class="col-lg-4 themed-grid-col">Type: @Decision.Type</div>
    @if (Decision.Actions.Actions.Count() > 0)
    {
        @foreach (ActionDetails a in Decision.Actions.Actions.ToList())
        {
            <button type="button" class="btn btn-primary" @onclick="@(_ => NavigationManager.NavigateTo(Utility.ActionRoute(a.Method, actionKeyValuePairs)))">
                @a.Name
            </button>
        }
    }
</div>



<br />
<br />

@code {

    [Parameter]
    public Decision Decision { get; set; }

    public string ActionToTake { get; set; }

    public Dictionary<string, string> actionKeyValuePairs { get; set; }
    public ActionList voteActionList { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        voteActionList = new ActionList();
    }

}
